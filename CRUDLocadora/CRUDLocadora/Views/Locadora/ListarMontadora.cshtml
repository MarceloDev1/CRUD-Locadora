@model CRUDLocadora.Models.FiltroLocadoraModel
@{
    ViewData["Title"] = "Montadoras";
}
<body>
    <section class="content">
        <section class="content-header">
            <h4>Montadoras</h4>
        </section>
        <div class="box">
            <div class="box-body ">
                <form action="BuscarMontadora" method="post">
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group">
                                <label for="IdMontadora">Montadora</label>
                                @Html.TextBoxFor(x => x.NomeMontadora, new { @class = "form-control", placeholder = "Montadora" })
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-2">
                            <label class="control-label">&nbsp;</label>
                            <button type="submit" class="btn btn-block btn-info btn-social" id="buscarMontadora"><i class="fa fa-search"></i> Buscar</button>
                        </div>
                        <div class="col-sm-12 col-md-2">
                            <label class="control-label">&nbsp;</label>
                            <a asp-action="CadastrarMontadora" class="btn btn-block btn-info btn-social"><i class="fa fa-search"></i> Nova Montadora</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Montadora</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var montadora in Model.ListaMontadora)
                    {
                        <tr>
                            <td>@montadora.NomeMontadora</td>
                            <td>
                                <a href="/Locadora/EditarMontadora?idMontadora=@montadora.IdMontadora" class="btn btn-primary" target="_blank">Editar</a>
                                <a asp-action="ExcluirMontadora" asp-route-idMontadora="@montadora.IdMontadora" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</body>
