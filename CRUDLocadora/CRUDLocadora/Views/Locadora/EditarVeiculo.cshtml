@model CRUDLocadora.Models.VeiculoModel
@{
    ViewData["Title"] = "EditarVeiculo";
}

<h4 class="alert alert-secondary">Editar Veículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarVeiculo" method="post" asp-route-idVeiculo="@Model.IdVeiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" placeholder="Cor" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" placeholder="Fabricante" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label">Ano Modelo</label>
                <input asp-for="AnoModelo" class="form-control" placeholder="Ano Modelo" />
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label for="IdModelo">Modelo</label>
                    @Html.DropDownListFor(x => x.IdModelo, new SelectList(Model.ListaModelo, "IdModelo", "NomeModelo"), "Informe o modelo", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label">Ano Fabricação</label>
                <input asp-for="AnoFabricacao" class="form-control" placeholder="Ano Fabricação" />
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" placeholder="Placa" size="10" maxlength="8" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chassi" class="control-label"></label>
                <input asp-for="Chassi" class="form-control" placeholder="Chassi" />
                <span asp-validation-for="Chassi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" />&emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>